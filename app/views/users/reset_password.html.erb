<div class="login-page-container">
  <div class="login-box">
    <h2>
      <span class="jp">パスワードリセット</span>
      <span class="en-sub">Reset Password</span>
    </h2>

    <%= form_with(url: update_password_path, local: true, class: 'login-form') do |f| %>
      <%= hidden_field_tag :token, @token %>

      <div class="field">
        <%= f.label :email do %>
          <span class="jp">メールアドレス</span>
          <span class="en-sub">Email</span>
        <% end %>
        <%= f.email_field :email, class: 'form-input', required: true %>
      </div>

      <div class="field">
        <%= f.label :password do %>
          <span class="jp">新しいパスワード</span>
          <span class="en-sub">New Password</span>
        <% end %>
        <%= f.password_field :password, class: 'form-input', required: true %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation do %>
          <span class="jp">新しいパスワード（確認）</span>
          <span class="en-sub">Confirm New Password</span>
        <% end %>
        <%= f.password_field :password_confirmation, class: 'form-input', required: true %>
      </div>

      <div class="actions">
        <%= f.submit class: 'login-button' do %>
          <span class="jp">パスワードを更新</span>
          <span class="en-sub">Update Password</span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<style>
.jp {
  display: inline-block;
}

.en-sub {
  display: inline-block;
  font-size: 10px;
  color: #666;
  margin-left: 4px;
  vertical-align: top;
}

body[data-language="JP"] .en-sub {
  display: none;
}

body[data-language="JPE"] .en-sub {
  display: inline-block;
}
</style>

<script>
// Set initial language
document.addEventListener('DOMContentLoaded', function() {
  const savedLanguage = localStorage.getItem('language') || 'JPE';
  document.body.setAttribute('data-language', savedLanguage);
});
</script> 